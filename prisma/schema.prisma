datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
  quizzes  Quiz[]
}

model Quiz {
  id        Int        @id @default(autoincrement())
  title     String
  questions Question[]
  userId    Int
  user      User       @relation(fields: [userId], references: [id])
}

model Question {
  id       Int      @id @default(autoincrement())
  question String
  answer   String
  options  Option[]
  quizId   Int
  quiz     Quiz     @relation(fields: [quizId], references: [id])
}

model Option {
  id         Int      @id @default(autoincrement())
  text       String
  questionId Int
  question   Question @relation(fields: [questionId], references: [id])
}
